datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AuthSession {
  associatedUser String?
  authToken      String?
  createdAt      DateTime  @default(now())
  expiresAt      DateTime?
  expiryDate     DateTime?
  id             String    @id @default(cuid())
  token          String?
  updatedAt      DateTime  @updatedAt
  user           User?     @relation(fields: [userId], references: [id])
  userId         String?
  userReference  String?
}

model User {
  authSessions   AuthSession[]
  createdAt      DateTime      @default(now())
  email          String?       @unique
  firstName      String?
  hashedPassword String?
  id             String        @id @default(cuid())
  lastName       String?
  password       String
  passwordHash   String?
  roles          Json
  updatedAt      DateTime      @updatedAt
  username       String        @unique
  userName       String?
}
